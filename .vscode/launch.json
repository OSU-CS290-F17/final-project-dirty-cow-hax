	"version": "0.2.0",
	"configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox",
            "url": "http://localhost:1337",
            "webRoot": "${workspaceFolder}/client"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:1337",
            "webRoot": "${workspaceRoot}/client"
        },
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Server",
            "program": "${workspaceRoot}/server.js"
        }
	]
}
